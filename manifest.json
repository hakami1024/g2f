{
    "manifest_version": 2,
    "name": "Guys2Folks",
    "version": "0.1.0",
    "icons": {"128": "images/icon.png"},
    "description": "Guys2Folks automatically changes \"guys\" (or \"guyz\") to \"folks\" preserving case. Guys2Folks does not limit your freedom:\n- can be switched off in any particular site or page;\n- does not interfere when you type;\n- is open source: https://github.com/hakami1024/g2f",
    "background": {
        "scripts": ["eventPage.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": [
                "content.js"
             ],
            "run_at": "document_end",
            "all_frames": true
        }
    ],
    "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",

   	"browser_action": {
    	"default_popup": "popup.html",
    	"default_icon": "images/icon.png"
    },
    "permissions": [
        "activeTab",
        "storage",
        "tabs",
        "https://ajax.googleapis.com/"
     ],
    "incognito": "split"
 }